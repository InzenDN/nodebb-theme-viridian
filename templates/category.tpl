<!-- BEGIN topics -->
<li data-tid="{topics.tid}">
	<div class="count">{topics.postcount}</div>
	<img class="picture img-circle" src="{topics.user.picture}" title="{topics.user.username}" />
	<p class="sidebar-label">{topics.title}</p>
	<p class="meta">
		<span class="timeago" title="{topics.relativeTime}"></span> -
		{topics.viewcount} views
	</p>
	<div class="clearfix"></div>
</li>
<!-- END topics -->